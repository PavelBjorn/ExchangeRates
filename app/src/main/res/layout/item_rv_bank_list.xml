<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rv_bankList_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_rv_bankList_itemPaddingBottom"
    android:paddingLeft="@dimen/item_rv_bankList_itemPaddingLeft"
    android:paddingRight="@dimen/item_rv_bankList_itemPaddingRight"
    android:paddingTop="@dimen/item_rv_bankList_itemPaddingTop"
    android:background="@drawable/item_rv_bank_list_selector">

    <TextView
        android:id="@+id/item_rv_bankList_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/item_rv_bankList_titleTextSize" />

    <TextView
        android:id="@+id/item_rv_bankList_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/item_rv_bankList_subTitleTextSize" />

    <TextView
        android:id="@+id/item_rv_bankList_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/item_rv_bankList_subTitleTextSize" />


</LinearLayout>